<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="375dp"
        android:layout_height="693dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_regular"
                android:text="Mi Perfil"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textPersonName"
                android:text="Nombres"
                android:textColor="@color/light_green"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/apellido"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textPersonName"
                android:text="Apellidos"
                android:textColor="@color/light_green"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textPersonName"
                android:text="identificacion"
                android:textColor="@color/light_green"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textPersonName"
                android:text="Correo"
                android:textColor="@color/light_green"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/celular"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textPersonName"
                android:text="Celular"
                android:textColor="@color/light_green"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/direccion"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textPersonName"
                android:text="DIreccion"
                android:textColor="@color/light_green"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/ModificarPerfil"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                android:onClick="onPlanRide"
                android:text="Modificar Perfil"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/replaceableLayout"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="109dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/EliminarCuenta"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_green"
                android:onClick="onGoNow"
                android:text="Eliminar Cuenta"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>